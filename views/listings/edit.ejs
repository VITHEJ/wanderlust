<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Edit List</h2>
    
<form method="post" action="/listings/<%= list._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
   <div class="mb-3">
    <label id="title" for="title" class="form-label">Title</label>
    <input required class="form-control" name="listing[title]" placeholder="<%= list.title %>" value="<%= list.title %>" id="title">
    <div class="invalid-feedback">Please enter valid Title</div>
</div>
    <div class="mb-3">
    <label id="description" for="description" class="form-label">Description</label>
    <textarea  required class="form-control" id="description" name="listing[description]" placeholder="<%=list.description%>"><%= list.description %></textarea>
   <div class="invalid-feedback">Enter Description</div>
</div>
  <div class="mb-3">
    <label for="image">Original Image</label>
    <br>
    <img src="<%=list.image.url%>" alt="Original Image" class="img-fluid mb-2" style="max-width: 300px; max-height: 200px;">
</div>
    <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label> 
        <input  required type="file" name="Listing[image]"  class="form-control">
    </div>
   <div class="row">
    <div class="mb-3 col-md-4">
    <label id="price" for="price" class="form-label">Price</label>
    <input  required class="form-control"id="price" name="listing[price]" placeholder="<%= list.price %>" value="<%= list.price %>">
   <div class="invalid-feedback">Enter valid price</div>
</div>
       <div class="mb-3 col-md-8">
    <label id="country" for="country" class="form-label">Country</label>
<input  required class="form-control" name="listing[country]" placeholder="<%= list.country%>" value="<%= list.country%>">
 <div class="invalid-feedback">Enter valid country</div>
</div>
</div>
   <div class="mb-3">
   <label id="location" for="location" class="form-label">Location</label>
    <input required class="form-control" id="location" name="listing[location]" value="<%= list.location %>" placeholder="<%= list.location %>">
    <div class="invalid-feedback">Enter valid location</div>
</div>


<button class="btn btn-dark mt-3" style="background-color: rgb(247, 55, 55);">Edit</button>

</form>
</div>
</div>
</body>